root = true

[*]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json}]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.java]
indent_size = 2

[*.gradle]
indent_size = 4

[*.{pl,pm}]
indent_size = 4

[Makefile]
indent_style = tab
